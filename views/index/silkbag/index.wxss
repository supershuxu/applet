/* views/index/silkbag/index.wxss */

.footer {
  background: #FFFEFE;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.20);
  position: fixed;
  bottom: 0;
  height: 108rpx;
  width: 100%;
}
.content{
  padding-bottom: 108rpx;
}
.down {
  height: 60rpx;
  width: 180rpx;
  background: #3197F9;
  border-radius: 2px;
  margin: 12px 142px;
  line-height: 60rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: 0;
}

.wrap {
  display: flex;
  overflow-x: auto;
}

.silkbag_item {
  width: 135px;
  flex-shrink: none;
  margin-right: 40rpx;
  margin-top: 50rpx;
}

.silkbag_item_pic {
  height: 178px;
  width: 135px;
}

.active {
  box-shadow: 0 0 15px 0 rgba(0, 0, 0, 1);
}

.title {
  height: 44rpx;
  width: 100%;
  text-align: center;
  line-height: 44rpx;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  margin-top: 50rpx;
  font-weight: 900;
  margin-bottom: 30rpx;
}
.desc{
  height: 40rpx;
  text-align: left;
  font-family: PingFangSC-Medium;
font-size: 14px;
color: #333333;
letter-spacing: 0;
font-weight: 700;
margin-bottom: 30rpx;
}
.desc_con{
  font-family: PingFangSC-Regular;
font-size: 14px;
color: #666666;
line-height: 20px;
margin-bottom: 40rpx;
}

.writer{
  position: relative;
}
.pic_wrap{
  height: 68rpx;
  width: 68rpx;
  border-radius: 34rpx;
  overflow: hidden;
}
.writer_pic{
  height: 68rpx;
  width: 68rpx;
}
.name{
  position: absolute;
  top: 6px;
  left: 50px;
}
.writer_con{
  margin-top: 20rpx;
  font-family: PingFangSC-Regular;
font-size: 12px;
color: #333333;
letter-spacing: 0;
padding-bottom:30rpx ;
}

