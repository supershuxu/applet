/* views/index/aps/index.wxss */
.content {
  margin-top: 120rpx;
}

.top_left {
  margin-top: 20px;
  background: #FFFFFF;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  height: 160rpx;
  width: 420rpx;
  float: left;
  padding: 10px 6px;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #333333;
}

.top_right {
  font-family: PingFangSC-Medium;
  font-size: 12px;
  color: #000000;
  margin-top: 20px;
  background: #FFFFFF;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  height: 160rpx;
  width: 240rpx;
  float: right;
  padding: 14px 10px;
  box-sizing: border-box;
}

.title{
  font-family: PingFangSC-Medium;
font-size: 18px;
color: #333333;
font-weight: 900;
margin:40rpx 0 50rpx 0 ;
clear: both;
float: left;
}

.wrap{
  display: flex;
  overflow-x: auto;
  clear: both;
  
}
.wrap::-webkit-scrollbar {
  display:none
}

.audit_data{
  flex-shrink: 0;
height:95px ;
width: 95px;
background: #5F5F5F;
border-radius: 4px;
clear: both;
margin-right: 10px;
}
.assist{
  position: relative;
  margin-bottom:20px ;
  width:100%;
  height: 160rpx;
  clear: both;
}
.assist_pic{
  width: 260rpx;
  height: 160rpx;
}
.assist_name{
  font-family: PingFangSC-Regular;
font-size: 15px;
color: #333333;
letter-spacing: 0.5px;
height: 21px;
position: absolute;
top: 0;
left: 150px;
width: 180px;
white-space: nowrap;
text-overflow: ellipsis;
overflow: hidden;
word-break: break-all;
}
.assist_class{
  font-family: PingFangSC-Regular;
font-size: 12px;
color: #999999;
letter-spacing: 0;
position: absolute;
top: 30px;
left: 150px;
}
.assist_price{
  font-family: PingFangSC-Regular;
font-size: 14px;
color: #FF4B3A;
letter-spacing: 0;
position: absolute;
bottom: 2px;
left: 150px;
}